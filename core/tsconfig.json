{
  "extends": "../config/tsconfig.json",
  "include": [
    "src/**/*",
    "test/**/*",
    "generated/**/*",
    "test_plugins/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    // TODO(mark): Remove to conform to options in ../tsconfig
    "noUnusedParameters": false,
    "outDir": "dist",
    "typeRoots": [ // Only allow types to be pulled from specific directories
      "./types",
      "./node_modules/@types",
      "../node_modules/@types",
    ]
  }
}
