{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Unit Tests",
            "preLaunchTask": "build:watch",
            "runtimeExecutable": "${workspaceFolder}/../bin/node",
            "runtimeArgs": [
                "--nolazy",
                "--inspect-brk=0.0.0.0:5858"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/_mocha",
            "args": [
                //"-g", "AWS style",
                "--no-timeouts",
                "--opts",
                "mocha.opts"
            ],
            "env":{
                //"ADAPT_TEST_MINIKUBE": "test_minikube",
                //"ADAPT_RUN_LONG_TESTS": "1",
                "ADAPT_NO_FORK": "1",
                "DOCKER_ARGS": "-p5858:5858"
            },
            "address": "127.0.0.1",
            "port": 5858,
            "timeout": 30000,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js",
                "${workspaceRoot}/node_modules/**/*.js"
            ],
            "sourceMaps": true,
            "smartStep": false,
            "skipFiles": [
                "<node_internals>/**/async_hooks.js",
                "<node_internals>/**/inspector_async_hook.js"
            ],
            "stopOnEntry": false,
            "protocol": "inspector",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/src/cli",
            "windows": {
                // WSL incorrectly handles the path backslashes in
                // ${workspaceFolder} if present. BUT, Mac won't allow a
                // relative executable path like the one below.
                "runtimeExecutable": "../bin/node-debug",
                "useWSL": true
            },
        },
    ]
}
