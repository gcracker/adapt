{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "ulib/**/*.ts",
    "ulib/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,  
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx":"react",
    "jsxFactory": "unbs.createElement",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "paths": {
      "css-what": [ "./types/css-what" ]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
  }
}
